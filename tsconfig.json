{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "es7",
            "dom.iterable",
            "scripthost"
        ],
        "moduleResolution": "node",
        "downlevelIteration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
}
